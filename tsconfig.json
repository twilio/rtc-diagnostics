{
  "include": ["lib/**/*.ts", "tests/**/*.ts"],
  "compilerOptions": {
    "target": "es5",
    "lib": ["es5", "es6", "es2016", "es2017.object", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "inlineSources": true,
    "strict": true,
    "outDir": "es5",
    "resolveJsonModule": true
  }
}
